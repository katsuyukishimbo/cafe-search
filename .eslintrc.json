{
    "extends": [
        "standard",
        "plugin:react/recommended",
        "plugin:prettier/recommended",
        "plugin:jest/recommended",
        "prettier/react"
    ],
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "plugins": ["react"],
    "parser": "babel-eslint",
    "parserOptions": {
    "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "globals": {
        "require": false,
        "module": false
    }
}
